<style>
  .site-footer-bottom {
    background-color: #111;
    padding: 3rem 0 1rem 0;
    color: #ccc;
    font-size: 0.9rem;
  }
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }
  .footer-col h3, .footer-col h4 {
    color: var(--color-text);
    margin-bottom: 1rem;
  }
  .footer-col h3 { font-size: 1.5rem; }
  .footer-col h4 { font-size: 1.1rem; }
  .footer-col p {
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  .footer-col ul li {
    margin-bottom: 0.5rem;
  }
  .footer-col ul a {
    color: #ccc;
  }
  .footer-col ul a:hover {
    color: var(--color-text);
    text-decoration: underline;
  }
  .social-icons {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }
  .social-icons a { /* Style text links */
    color: #ccc;
    font-weight: bold;
    font-size: 1rem;
    border: 1px solid #555;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    background-color: #222;
  }
   .social-icons a:hover {
     color: var(--color-text);
     background-color: #333;
     text-decoration: none;
   }

  .contact-form label {
    display: block;
    margin-bottom: 0.3rem;
    font-weight: bold;
    color: var(--color-text);
  }
  .contact-form input,
  .contact-form textarea {
    width: 100%;
    padding: 0.6rem;
    margin-bottom: 1rem;
    background-color: #333;
    border: 1px solid var(--color-border);
    color: var(--color-text);
    border-radius: 4px;
    box-sizing: border-box; /* Include padding in width */
  }
  .contact-form button {
    background-color: var(--color-bg-alt); /* Greenish button */
    border: none;
    padding: 0.8rem 1.5rem; /* Match other buttons */
    color: var(--color-text);
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-align: center;
    font-weight: bold;
  }
  .contact-form button:hover {
    background-color: #3a4a3a;
  }
  .footer-bottom-bar {
    border-top: 1px solid var(--color-border);
    padding-top: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
    color: #aaa;
  }

  @media (max-width: 768px) {
     .footer-grid {
        grid-template-columns: 1fr; /* Stack columns */
     }
     .social-icons {
        justify-content: center; /* Center icons when stacked */
     }
     .footer-bottom-bar {
        flex-direction: column;
        gap: 0.5rem;
        text-align: center;
     }
  }
</style>
