---
// src/components/MerkabaEarthMapApplet.astro
// This component wraps the React application from the submodule.
// We assume the main React component is exported as 'App' from 'src/App.tsx'
// within the MerkabaEarthMap submodule. Adjust the import if your main component
// is named differently or located elsewhere (e.g., src/main.tsx).
import MerkabaApp from '../submodules/MerkabaEarthMap/src/App';
---

<div>
  <MerkabaApp client:load />
</div>

<style>
  /* Add any specific styling for the container if needed */
  div {
    /* Example styling, adjust as needed */
    border: 1px solid var(--color-border, #ccc); /* Use CSS variable from Layout if available */
    padding: 1rem;
    margin-bottom: 1rem;
    min-height: 500px; /* Give it some initial height */
    display: flex; /* Helps if the React app needs to fill the container */
    justify-content: center; /* Center content if it doesn't fill width */
    align-items: center; /* Center content vertically */
  }
  /* Ensure the React app itself can take up space */
  div > :global(*) {
    width: 100%;
    height: 100%;
  }
</style>
