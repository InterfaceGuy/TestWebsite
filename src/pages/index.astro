---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ActivityCard from '../components/ActivityCard.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import ArticleCard from '../components/ArticleCard.astro';

// Example URLs (replace with actual ones)
const activityIcons = {
  volunteering: 'https://picsum.photos/seed/volunteering/80/80', // Placeholder for Volunteering icon
  youthExchange: 'https://picsum.photos/seed/exchange/80/80', // Placeholder for Youth Exchange icon
  technicianMobility: 'https://picsum.photos/seed/mobility/80/80' // Placeholder for Technician Mobility icon
};
const aboutLogoUrl = 'https://picsum.photos/seed/aboutlogo/300/300'; // Placeholder for About Us logo
const visionGraphicUrl = 'https://picsum.photos/seed/vision/800/200'; // Placeholder for Vision graphic
const testimonialImages = {
  marcus: 'https://picsum.photos/seed/marcus/50/50',
  kristine: 'https://picsum.photos/seed/kristine/50/50',
  bob: 'https://picsum.photos/seed/bob/50/50'
};
const articleImages = {
  article1: 'https://picsum.photos/seed/article1/150/100',
  article2: 'https://picsum.photos/seed/article2/150/100',
  merkabaArticle: 'https://picsum.photos/seed/merkaba/150/100' // Placeholder for Merkaba article
};
const collaborationLogos = [
  'https://picsum.photos/seed/logo1/100/50',
  'https://picsum.photos/seed/logo2/100/50',
  'https://picsum.photos/seed/logo3/100/50',
  'https://picsum.photos/seed/logo4/100/50',
  'https://picsum.photos/seed/logo5/100/50',
  'https://picsum.photos/seed/logo6/100/50',
  'https://picsum.photos/seed/logo7/100/50',
  'https://picsum.photos/seed/logo8/100/50',
  'https://picsum.photos/seed/logo9/100/50'
];
const heroBackgroundUrl = 'https://picsum.photos/seed/hero/1920/600'; // Placeholder for Hero background
---

<Layout title="Youth In The World">
  <Header />

	<main>
    <!-- Hero Section -->
    <section class="hero-section" style={`background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('${heroBackgroundUrl}') no-repeat center center/cover;`}>
      <div class="hero-content container text-center">
        <h1>Youth In The World</h1>
        <p>We share and promote volunteering and international mobility activities that promote learning and social transformation</p>
        <a href="#opportunities" class="button">Opportunities</a>
        <!-- Temporary Admin Button -->
        <a href="/TestWebsite/admin" class="button admin-button-temp">Admin Page (Temporary)</a>
        <!-- End Temporary Admin Button -->
      </div>
    </section>

    <!-- Area of Activity Section -->
    <section id="opportunities" class="area-activity container text-center">
      <h2>Area of activity:</h2>
      <p>Youth in the World focuses on different areas of action:</p>
      <div class="grid grid-cols-3">
        <ActivityCard
          title="Volunteering European Solidarity Corps"
          iconSrc={activityIcons.volunteering}
        />
        <ActivityCard
          title="Youth Exchanges"
          iconSrc={activityIcons.youthExchange}
        />
        <ActivityCard
          title="Youth Technicians Mobility"
          iconSrc={activityIcons.technicianMobility}
        />
      </div>
    </section>

    <!-- About Us Section -->
    <section id="about" class="about-us" style="background-color: var(--color-bg-alt);">
      <div class="container grid grid-cols-2" style="align-items: center;">
        <div>
          <h2>About us:</h2>
          <p>Youth in the World is run by a non-profit association â€“ The World is Us, with different initiatives aimed at children, young people, parents and the general public, with the purpose of promoting the education of the Human Being as a Whole.</p>
          <a href="#" class="button">Know more</a>
        </div>
        <div class="about-image text-center">
          <img src={aboutLogoUrl} alt="O Mundo Somos Nos Logo Placeholder" style="max-width: 300px; margin: auto; border-radius: 50%;"/>
        </div>
      </div>
    </section>

    <!-- Vision Section -->
    <section class="vision container text-center">
       <h2>Vision</h2>
       <p>We believe that it is possible to build a more supportive, inclusive and intercultural world by connecting individuals from different cultures in volunteering and international mobility activities.</p>
       <div class="vision-graphic">
         <img src={visionGraphicUrl} alt="Vision Graphic Placeholder" style="margin-top: 2rem;"/>
       </div>
    </section>

    <!-- Newsletter Section -->
    <section class="newsletter" style="background-color: var(--color-bg-alt);">
      <div class="container text-center">
        <h2>Want to know more? Subscribe to the newsletter:</h2>
        <form class="newsletter-form">
          <input type="email" placeholder="Enter your email" required />
          <button type="submit" class="button">SUBSCRIBE</button>
        </form>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section id="testimonials" class="testimonials container">
      <h2 class="text-center">Testimonials</h2>
      <p class="text-center">Get inspired by the stories shared by young people who have carried out activities with us</p>
      <div class="grid grid-cols-3">
        <TestimonialCard
          quote="I am very very thankful for this experience with you guys, it was amazing (...) I felt so lucky to have met such amazing people like you. When I stepped foot on that bus, I knew that this is going to be amazing (...) I loved to see and host the cultural nights, I wasn't able to talk to ALL of you, but with the ones I talked it was amazing."
          name="Marcus Torres"
          role="Adam, Youth Exchange 2024"
          imgSrc={testimonialImages.marcus}
        />
        <TestimonialCard
          quote="I want to say BIG THANK YOU for what are you doing for us! (...) How much we receive from your side and how lucky we are to have you! (...) Being part of this project is a blessing, I feel so safe and satisfied for choosing it, it's like mother's womb and I am so grateful!"
          name="Kristine L"
          role="Kiki, Long-term CES volunteer 2024"
          imgSrc={testimonialImages.kristine}
        />
         <TestimonialCard
          quote="I loved every bit of this week. And especially all of you. I hope everyone had the same amount of fun or even more than I had. I will miss you guys like hell and I will see every one of you again"
          name="Bob Larrat"
          role="Lovisa, Youth Exchange 2024"
          imgSrc={testimonialImages.bob}
        />
      </div>
    </section>

    <!-- Recent Articles Section -->
    <section id="blog" class="recent-articles container">
      <h2 class="text-center">Recent Articles</h2>
      <p class="text-center">Don't miss our latest publications:</p>
      <div class="grid grid-cols-2">
         <ArticleCard
          category="European Solidarity Corps, International Volunteering"
          title="International Volunteer Sharing at OMSN"
          date="December 21, 2024"
          imgSrc={articleImages.article1}
          {/* Removed slug="true" */}
        />
        <ArticleCard
          category="European Solidarity Corps, Exhibition, Personal Project, International Volunteering"
          title="The Awakening of Creativity: An Artistic Journey through Fernando Pessoa."
          date="December 18, 2024"
          imgSrc={articleImages.article2}
          {/* Removed slug="true" */}
        />
        <ArticleCard
          category="Interactive Exploration, Sacred Geometry"
          title="The Merkaba Earth Grid - An Interactive Exploration"
          date="May 9, 2025"
          imgSrc={articleImages.merkabaArticle}
          href="/TestWebsite/blog/merkaba-earth-grid"
        />
        <!-- Add more articles if needed -->
      </div>
      <div class="text-center" style="margin-top: 2rem;">
        <a href="/TestWebsite/blog" class="button">Explore all</a>
      </div>
    </section>

    <!-- Event Signup Section -->
    <section id="event-signup" class="event-signup" style="background-color: var(--color-bg-alt);">
      <div class="container text-center">
        <h2>Sign Up for Our Next Event!</h2>
        <p>Fill out the form below to register for our upcoming event.</p>
        <div class="form-container">
          <iframe src="https://forms.gle/VCsVFB3ywEDGqoJq6" width="100%" height="800" frameborder="0" marginheight="0" marginwidth="0">Loading...</iframe>
        </div>
      </div>
    </section>

    <!-- Collaboration Section -->
    <section id="contact" class="collaboration container text-center">
      <h2>In collaboration with:</h2>
      <div class="collaboration-logos grid grid-cols-6">
        {collaborationLogos.map((logoUrl, index) => (
          <img src={logoUrl} alt={`Partner Logo ${index + 1} Placeholder`} />
        ))}
      </div>
    </section>

	</main>

  <Footer />

</Layout>

<style>
	/* Hero Section Styles */
  .hero-section {
    /* Background image set inline via style attribute */
    height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text);
  }
  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem; /* Add gap between elements */
  }
  .hero-content h1 {
    font-size: 3.5rem;
    margin-bottom: 0; /* Remove bottom margin */
  }
  .hero-content p {
    font-size: 1.2rem;
    margin-bottom: 0; /* Remove bottom margin */
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  .hero-content .button {
     background-color: var(--color-bg-alt); /* Greenish button */
     border: none;
     padding: 1rem 2rem;
     font-size: 1.1rem;
  }
   .hero-content .button:hover {
     background-color: #3a4a3a;
   }

   /* Temporary Admin Button Style */
   .admin-button-temp {
     background-color: #555; /* Different color to stand out */
     border: 1px solid #777;
     font-size: 0.9rem;
     padding: 0.5rem 1rem;
   }
   .admin-button-temp:hover {
     background-color: #666;
   }


  /* Area of Activity Styles */
  .area-activity h2 {
    margin-bottom: 2rem;
  }

  /* About Us Styles */
  .about-us .grid {
    gap: 3rem;
  }
  .about-us .button {
     background-color: transparent;
     border: 1px solid var(--color-text);
  }
   .about-us .button:hover {
     background-color: rgba(255, 255, 255, 0.1);
   }

  /* Vision Styles */
  .vision h2 {
    margin-bottom: 1rem;
  }
  .vision p {
    max-width: 700px;
    margin: 0 auto 2rem auto;
  }

  /* Newsletter Styles */
  .newsletter h2 {
    margin-bottom: 1.5rem;
  }
  .newsletter-form {
    display: flex;
    justify-content: center;
    gap: 1rem;
    max-width: 500px;
    margin: 0 auto;
  }
  .newsletter-form input {
    flex-grow: 1;
    padding: 0.8rem 1rem;
    border: 1px solid var(--color-border);
    background-color: #333;
    color: var(--color-text);
    border-radius: 4px;
  }
  .newsletter-form .button {
    background-color: var(--color-button-bg);
    border: 1px solid var(--color-border);
  }
  .newsletter-form .button:hover {
     background-color: var(--color-button-hover-bg);
   }

  /* Testimonials Styles */
  .testimonials h2 {
    margin-bottom: 1rem;
  }
  .testimonials > p.text-center { /* Target the intro paragraph */
    max-width: 600px;
    margin: 0 auto 2rem auto;
    color: #ccc;
  }

  /* Recent Articles Styles */
  .recent-articles h2 {
    margin-bottom: 1rem;
  }
   .recent-articles > p.text-center {
     margin-bottom: 2rem;
     color: #ccc;
   }
   .recent-articles .button {
     background-color: transparent;
     border: 1px solid var(--color-text);
   }
   .recent-articles .button:hover {
     background-color: rgba(255, 255, 255, 0.1);
   }

  /* Event Signup Section */
  .event-signup h2 {
    margin-bottom: 1rem;
  }
  .event-signup p {
    margin-bottom: 2rem;
  }
  .event-signup .form-container {
    max-width: 700px; /* Limit form width */
    margin: 0 auto;
    background-color: #fff; /* Google Form background is white */
    padding: 1rem;
    border-radius: 8px;
  }
  .event-signup iframe {
    display: block; /* Remove extra space below iframe */
  }


  /* Collaboration Section */
  .collaboration h2 {
    margin-bottom: 2rem;
  }
  .collaboration-logos {
    align-items: center;
    justify-content: center;
    gap: 1.5rem; /* Adjust gap as needed */
  }
  .collaboration-logos img {
    max-height: 50px; /* Control logo height */
    width: auto;
    margin: 0 auto; /* Center logos within grid cells */
    /* Removed filter for placeholder images */
    opacity: 0.9; /* Slightly less opaque */
  }

  /* Responsive Adjustments */
  @media (max-width: 992px) {
    .grid-cols-3 {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* More flexible grid */
    }
     .testimonials .grid-cols-3 {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
     }
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.8rem;
    }
    .hero-content p {
      font-size: 1rem;
    }
    .about-us .grid {
      grid-template-columns: 1fr; /* Stack columns */
      text-align: center;
    }
    .about-us .about-image {
      order: -1; /* Move image above text */
      margin-bottom: 2rem;
    }
    .newsletter-form {
      flex-direction: column;
      max-width: 350px;
    }
    .recent-articles .grid-cols-2 {
       grid-template-columns: 1fr;
    }
    .collaboration-logos {
       grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
       gap: 1rem;
    }
  }

</style>
